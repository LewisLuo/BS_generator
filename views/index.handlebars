<div class="container">
  <div class="row my-5 justify-content-center">
    <h2>你想對誰說幹話？</h2>
  </div>
  <hr>

  <form method="POST" action="/">
    <div class="row">
      {{#each people}}
      <div class="col">
        <div class="form-check form-check-inline d-flex justify-content-center">
          <label class="form-check-label" for="{{this.nameEng}}" style="cursor:pointer;">
            <div class="card p-1" style="width: 18rem;">
              <div class="image d-flex align-items-center" style="height: 15rem"><img src="{{this.image}}"
                  class="card-img-top" alt="{{this.nameEng}}"></div>
              <div class="card-body d-flex flex-row align-items-center justify-content-center">
                <input class="form-check-input" type="radio" name="target" id="{{this.nameEng}}"
                  value="{{this.nameEng}}" {{ checkRadio this.nameEng ../target}}>
                <span>{{this.name}}</span>
              </div>
            </div>
          </label>
        </div>
      </div>
      {{/each}}
    </div>

    <div class="row mt-4">
      <div class="col-2 offset-2 d-flex align-items-center justify-content-center">
        <div class="submit">
          <button>產生幹話</button>
        </div>
      </div>
      <div class="col-7 border border-secondary rounded-sm align-middle d-flex align-items-center"
        style="width:auto; min-width:200px; height: 60px; cursor: text;" id="results">
        <span class="align-middle" style="font-size: 25px">{{result}}</span>
      </div>
    </div>

  </form>
</div>